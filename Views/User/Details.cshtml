@{
    ViewData["Title"] = "User List";
}

<h2>User - @ViewBag.user.Username</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Phone Number</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@ViewBag.user.Username</td>
            <td>@ViewBag.user.FirstName</td>
            <td>@ViewBag.user.LastName</td>
            <td>@ViewBag.user.BirthDate</td>
            <td>@ViewBag.user.PhoneNumber</td>
            <td><a asp-action="Edit" asp-route-id="@ViewBag.user.Id">Edit</a></td>
            <td><a asp-action="Delete" asp-route-id="@ViewBag.user.Id">Delete</a></td>
        </tr>
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>
