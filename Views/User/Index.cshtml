@{
    ViewData["Title"] = "User List";
}

<h2>User List - <a asp-action="Create">Create</a></h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Birth Date</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in ViewBag.users)
        {
            <tr>
                <td><a asp-action="Details" asp-route-id="@user.Id">@user.Username</a></td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.BirthDate</td>
                <td>@user.PhoneNumber</td>
                <td><a asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                <td><a asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
