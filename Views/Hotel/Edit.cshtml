@model Hotel

@{
    ViewData["Title"] = "Edit Hotel";
}

<h2>Edit Hotel</h2>

<form asp-action="EditSave" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Location" class="control-label">Location</label>
        <input asp-for="Location" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CategoryId" class="control-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="Capacity" class="control-label">Capacity</label>
        <input asp-for="Capacity" class="form-control" />
    </div>
    <input type="submit" value="Edit" class="btn btn-primary" />
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
